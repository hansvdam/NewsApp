<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/dataset_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:maxLines="2"
            android:textColor="@color/textPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="dataset name" />

        <TextView
            android:id="@+id/organisation_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="organisatie: "
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/dataset_name"
            app:layout_constraintTop_toBottomOf="@id/dataset_name" />

        <TextView
            android:id="@+id/organization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dataset_name"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/textPrimary"
            app:layout_constraintBaseline_toBaselineOf="@id/organisation_label"
            app:layout_constraintStart_toEndOf="@+id/organisation_label"
            tools:text="organisatie name" />

        <TextView
            android:id="@+id/dataset_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dataset_name"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/textPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/organization"
            tools:text="dataset notes dataset notes dataset notes dataset notes dataset notes dataset notes dataset notes dataset notes dataset notes dataset notes dataset notes dataset notes dataset notes " />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>